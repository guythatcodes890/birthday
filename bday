    // Countdown timer to October 25, 2025, 4:30 PM
    const countdown = document.getElementById("countdown");
    const partyDate = new Date("October 25, 2025 16:30:00").getTime();

    const timer = setInterval(() => {
      const now = new Date().getTime();
      const distance = partyDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      countdown.innerHTML = `ğŸƒ ${days}d ${hours}h ${minutes}m ${seconds}s until the party! ğŸƒ`;

      if (distance < 0) {
        clearInterval(timer);
        countdown.innerHTML = "ğŸ‰ It's party time! ğŸ‰";
      }
    }, 1000);
